<div class = "row">
  <div class="col-md-4 col-md-offset-4 col-sm-2 col-sm-offset-5">
    <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          <!-- @event.errors.full_messages.each do |message| -->
          </ul>
        </div>
      <% end %>
      <!-- if @event.errors.any? -->

      <div class="actions">
          <%= f.label :title %><br>
          <%= f.text_field :title, :placeholder => "Event Title", class: 'form-control' %>

          <%= f.label :event_tag_id %><br>
          <%= collection_select(:event, :event_tag_id, @tags, :id, :tag_name) %><br>
          
          <%= f.label :description %><br>
          <%= f.text_field :description, :placeholder => "Event Description", class: 'form-control' %>

          <%= f.label :person_count_cap %><br>
          <%= f.number_field :person_count_cap, :placeholder => "Maximum Number of Guests", class: 'form-control' %>
          
          <%= f.label :start_time %><br>
          <%= f.datetime_select :start_time, :placeholder => Time.now, class: 'form-control' %><br>
          
          <%= f.label :end_time %><br>
          <%= f.datetime_select :end_time, :placeholder => Time.now+100, class: 'form-control' %><br>

          <%= f.label :address %><br>
          <%= f.text_field :address, :placeholder => "Address", class: 'form-control' %>
          
          <%= f.label :zip_code %><br>
          <%= f.number_field :zip_code, class: 'form-control' %>
          
          <%= f.label :city %><br>
          <%= f.text_field :city, class: 'form-control' %>
          
          <%= f.label :state %><br>
          <%= f.text_field :state, class: 'form-control' %>


        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
      <!-- form_for -->
      <%= button_to "Cancel", :root, class: "btn btn-default:focus", style:"margin-top: 5px", :method => :get %>
      </div>
  </div>
</div>
