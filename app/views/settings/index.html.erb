<div class="container-fluid">
	<h2>Account Settings</h2>
	<h3>Profile</h3>
	<p>
	  <strong>Name:</strong>
	  <%= current_user.first_name %> <%= current_user.last_name %>
	</p>

	<p>
	  <strong>Email:</strong>
	  <%= current_user.email %>
	</p>

	<%= link_to "Edit", edit_user_path(current_user), :type => "button", :class => "btn btn-success", :method => :get %>
	<%= link_to "Delete", user_path(current_user), :class => "btn btn-default", :method => :delete, :data => { :confirm => 'Are you sure?' } %>
</div>