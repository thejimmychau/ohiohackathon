<h2>User Information</h2>
<p>
  <strong>Name:</strong>
  <%= @user.first_name %> <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to "Edit", edit_user_path(current_user), :type => "button", :class => "btn btn-success", :method => :get %>
<%= link_to "Delete", user_path(current_user), :class => "btn btn-default", :method => :delete, :data => { :confirm => 'Are you sure?' } %>

<h3>Your Upcoming Events</h3>
<!-- Add all events user has created here -->
<div class="all_events">

    <% @future_events.each do |event| %>
    <%= render partial: "layouts/event", locals: {event: event,user_created_event:true} %>
    <% end %>
</div>

<h3>Others' Upcoming Events</h3>
<!-- Add all events user has created here -->
<div class="all_events">
    <% @future_attended_events.each do |event| %>
        <% @events.each do |event| %>
<%= render partial: "layouts/event", locals: {event: event, user_created_event:false} %>
        <% end %>
    <% end %>
</div>

<h3>Your Past Events</h3>
<!-- Add all events user has created here -->
<div class="all_events">

	<% @past_events.each do |event| %>
    <%= render partial: "layouts/event", locals: {event: event,user_created_event:true} %>
    <% end %>
</div>

<h3>Others' Events You've Attended In The Past</h3>
<!-- Add all events user has created here -->
<div class="all_events">
    <% @past_attended_events.each do |event| %>
        <% @events.each do |event| %>
<%= render partial: "layouts/event", locals: {event: event, user_created_event:false} %>
        <% end %>
    <% end %>
</div>